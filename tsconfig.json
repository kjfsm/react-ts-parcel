{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "rootDir": "./src",
    "lib": ["dom", "es2015"]
  },
	"include": ["./src/**/*"]
}
